<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".AddEditNoteActivity">

    <!-- - Merupakan edit teks untuk noteTitle
         - Mempunyai id berupa idEdtNoteName
         - Menampilkan tulisan hint berupa enter the surrah
         - Mempunyai warna yang diletakkan pada @color
    -->
    <EditText
        android:id="@+id/idEdtNoteName"
        android:layout_width="386dp"
        android:layout_height="116dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter The Surrah"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <!-- -Edit text untuk note descriprion
         - Mempunyai id berupa idEdtNoteDesc
         - Menampilkan tulisan hint berupa enter the last verse
         - Mempunyai warna yang diletakkan pada @color
         - Mempunyai input type berupa text multiple line
    -->
    <EditText
        android:id="@+id/idEdtNoteDesc"
        android:layout_width="392dp"
        android:layout_height="211dp"
        android:layout_above="@id/idBtn"
        android:layout_below="@id/idEdtNoteName"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="267dp"
        android:background="@color/black_shade_1"
        android:gravity="start|top"
        android:hint="Enter The Last Verse"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:ignore="TextContrastCheck" />

    <!-- - button untuk menyimpan data
         - Mempunyai id berupa idBtn
         - Mempunyai warna yang diletakkan pada @color
         - Memiliki gambar yang diletakkan pada @drawable
    -->
    <Button
        android:id="@+id/idBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_back"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>